<div class="booking_form">
  <%= simple_form_for [@doppelganger, @booking] do |f| %>
    <%= f.input :address,
      input_html: {data: {address_autocomplete_target: "address"}, class: "d-none .mapboxgl-ctrl-geocoder"},
      wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
    %>
    <%= f.input :start_date, html5: true %>
    <%= f.input :end_date, html5: true %>
    <%= f.submit id: "create-booking"%>
  <% end %>
</div>
