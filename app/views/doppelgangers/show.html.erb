<div class="show-container">
  <div class="info-container">
    <div class="photo-container">
      <div class="first-photo">
        <% if @doppelganger.seed_photo.nil? %>
          <%= cl_image_tag @doppelganger.photo.key%>
        <% else %>
          <%= image_tag @doppelganger.seed_photo %>
        <% end %>
      </div>
      <div class="smaller-photos">
        <div class="second-photo">
          <%= image_tag "placeholder.jpg" %>
        </div>
        <div class="third-photo">
          <%= image_tag "placeholder.jpg" %>
        </div>
      </div>
    </div>
    <div class="doppelganger-info">
      <h2><%= @doppelganger.name %></h2>
      <h6><%= "#{@doppelganger.gender} | #{@doppelganger.age} years old" %></h6>
      <h5><%= @doppelganger.address %></h6>
    </div>
    <div class="doppelganger-bio">
      <p><%= @doppelganger.bio %></p>
    </div>
  </div>
  <div class="booking-form-container">
    <%= render "doppelgangers/booking_form" %>
  </div>
</div>
